<UserControl x:Class="Altkom.Santander.Arka.WPFClient.Views.FundsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Altkom.Santander.Arka.WPFClient.Views"
             xmlns:vm="clr-namespace:Altkom.Santander.Arka.ViewModels;assembly=Altkom.Santander.Arka.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:FundsViewModel />
    </UserControl.DataContext>

    <Grid>

        <Button Content="Calculate" 
                />


        <DataGrid
            ItemsSource="{Binding Funds}" />

    </Grid>
</UserControl>
